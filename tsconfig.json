{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "lib": [ "ES2022" ],
    "moduleResolution": "NodeNext",

    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,

    "incremental": true,
    "composite": true,

    "strict": true,
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
